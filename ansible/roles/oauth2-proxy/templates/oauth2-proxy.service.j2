[Unit]
Description = oauth2-proxy daemon service
After = syslog.target network.target

[Service]
Type = simple
ExecStart = /usr/local/bin/oauth2-proxy --config=/etc/oauth2-proxy.cfg --github-user jmvbxx@gmail.com
ExecStop = /bin/kill $MAINPID
KillMode = process
Restart = always

[Install]
WantedBy = multi-user.target
